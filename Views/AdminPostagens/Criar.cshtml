@using PWABlog.ViewModels.Admin
@model PWABlog.ViewModels.Admin.AdminPostagensCriarViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Criar nova Postagem</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        @if (@Model.Erro != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> Erro!</h5>
                @Model.Erro
            </div>
        }


    <form action="/admin/postagens/criar" method="post">
        <div class="form-group mb-3">
            <label for="nome">Titulo</label>
            <input name="nome" id="nome" type="text" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="descricao">Descrição</label>
            <input name="descricao" id="descricao" type="text" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="data">Data da Postagem</label>
            <input name="data" id="data" type="date" class="form-control">
        </div>


        <div class="form-group mb-3">
            <label for="IdCategoria">Categoria</label>
            <select id="IdCategoria" name="IdCategoria" class="form-control">
                <option value="">Selecione</option>
                @foreach (CategoriaAdminPostagens categoria in Model.Categorias)
                {
                    <option value="@categoria.IdCategorias">@categoria.NomeCategorias</option>
                }
            </select>
        </div>
        <div class="form-group mb-3">
            <label for="IdAutor">Autor</label>
            <select id="IdAutor" name="IdAutor" class="form-control">
                <option value="">Selecione</option>
                @foreach (AutorAdminPostagens autores in Model.Autores)
                {
                    <option value="@autores.IdAutores">@autores.NomeAutores</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary btn-block">Criar</button>
            <a class="mt-3" href="/admin/postagens">Cancelar</a>
        </div>
    </form>
    </div>
</div>