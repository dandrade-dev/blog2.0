@using PWABlog.ViewModels.Admin
@model PWABlog.ViewModels.Admin.AdminCategoriasListarViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Listagem de Categorias</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <a class="btn btn-primary" href="~/admin/categorias/criar">Criar nova categoria</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Etiquetas</th>
                    <th>Postagens</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CategoriaAdminCategorias categorias in @Model.Categorias)
                {
                <tr>
                    <td>@categorias.Id</td>
                    <td>@categorias.Nome</td>
                    <td>@categorias.NomeEtiqueta</td>
                    <td>@categorias.NomePostagem</td>
                    <td>
                        <a class="btn btn-default btn-xs" href="/admin/etiquetas/editar/@categorias.Id">Editar</a>
                        <a class="btn btn-danger btn-xs" href="/admin/etiquetas/remover/@categorias.Id">Remover</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>